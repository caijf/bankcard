{
  "name": "bankcard",
  "version": "3.0.7",
  "description": "通过银行卡号查询银行和卡类型，支持浏览器端和node",
  "main": "dist/bankcard.js",
  "module": "es/index.js",
  "types": "es/index.d.ts",
  "files": [
    "es",
    "lib",
    "dist"
  ],
  "scripts": {
    "test": "jest --verbose",
    "test:coverage": "jest --coverage",
    "build": "npm run build:es && npm run build:lib && npm run build:umd",
    "build:es": "rm -rf es && tsc -p tsconfig.build.json --outDir es -m esnext -d",
    "build:lib": "rm -rf lib && tsc -p tsconfig.build.json --outDir lib -m commonjs -d",
    "build:umd": "rm -rf dist && rollup -c",
    "prettier": "prettier --write **/*",
    "lint:js": "eslint --ext .js,.jsx,.ts,.tsx src",
    "lint-fix:js": "npm run lint:js -- --fix",
    "commit": "cz",
    "prepublishOnly": "npm test && npm run build",
    "tsc": "tsc --noEmit",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.{css,less}": "stylelint --fix",
    "**/*.{js,jsx,ts,tsx}": "eslint",
    "**/*.{css,scss,less,js,jsx,ts,tsx,json,md}": "prettier -w"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/caijf/bankcard.git"
  },
  "keywords": [
    "bankcard",
    "bank",
    "cardType",
    "CardBin",
    "validateCardInfo",
    "searchCardBin"
  ],
  "author": "caijf",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/caijf/bankcard/issues"
  },
  "homepage": "https://github.com/caijf/bankcard#readme",
  "dependencies": {
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.3",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.49.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "rollup": "^3.29.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  }
}
